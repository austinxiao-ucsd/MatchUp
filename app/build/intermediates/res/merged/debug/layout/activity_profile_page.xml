<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ucsd.stephen_h.matchup.ProfilePage">

    <include layout="@layout/default_customized_action_bar"
        android:id="@+id/profilePageActionBar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/profilePageTabBar"
        android:orientation="horizontal"
        android:layout_below="@id/profilePageActionBar"
        android:weightSum="4">

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/profilePagePairedEventListButton"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/ic_paired_events"
            android:layout_gravity="center"
            android:textAllCaps="false"
            android:layout_weight="1"
            android:background="@null"/>

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/profilePageMyEventListButton"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/ic_my_events"
            android:layout_gravity="center"
            android:textAllCaps="false"
            android:layout_weight="1"
            android:background="@null"/>


        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/profilePageProfileButton"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/ic_profile_page"
            android:layout_gravity="center"
            android:textAllCaps="false"
            android:layout_weight="1"
            android:background="@null"/>

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/InterLinksButton"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/ic_questions"
            android:layout_gravity="center"
            android:textAllCaps="false"
            android:layout_weight="1"
            android:background="@null" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@id/profilePageTabBar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/profilePageTabBar"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        android:weightSum="15">


        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/profilePageChooseProfileImageButton"
            android:src="@drawable/profle1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@null"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/profilePageName"
            android:text="My Name"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:gravity="center"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/profilePageEmail"
            android:layout_marginTop="10dp"
            android:layout_below="@id/profilePageName"
            android:text="My Email"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:gravity="center"
            />


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ProfilePageResetPasswordButton"
            android:text="Reset Password"
            android:textAllCaps="false"
            android:layout_above="@+id/ProfilePageLogOutButton"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ProfilePageLogOutButton"
            android:text="Log Out"
            android:textAllCaps="false"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

</RelativeLayout>
