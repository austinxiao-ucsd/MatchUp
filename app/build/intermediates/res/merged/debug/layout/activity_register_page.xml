<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ucsd.stephen_h.matchup.RegisterPage">
    <include layout="@layout/default_customized_action_bar"
        android:id="@+id/registerPageActionBar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/registerPageActionBar"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/registerPageChooseProfileImageButton"
            android:src="@drawable/profle1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@null"
            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/registerPageUserName"
            android:layout_below="@id/registerPageChooseProfileImageButton"
            android:layout_marginTop="10dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:hint="New Username"
            android:singleLine="true"
            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:id="@+id/registerPagePassword"
            android:layout_below="@+id/registerPageUserName"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/registerPageUserName"
            android:layout_alignEnd="@+id/registerPageUserName"
            android:hint="Password"
            android:singleLine="true"
            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:id="@+id/registerPageEmail"
            android:hint="Email Address"
            android:singleLine="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/registerPageLastName"
            android:layout_alignEnd="@+id/registerPageLastName"
            android:layout_below="@id/registerPageLastName" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up!"
            android:id="@+id/registerPageSignUpButton"
            android:textAllCaps="false"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/registerPageEmail"
            android:layout_alignEnd="@+id/registerPageEmail" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:id="@+id/registerPagePasswordAgain"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/registerPagePassword"
            android:layout_alignRight="@+id/registerPagePassword"
            android:layout_alignEnd="@+id/registerPagePassword"
            android:hint="Enter Password Again"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:id="@+id/registerPageFirstName"
            android:layout_below="@+id/registerPagePasswordAgain"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/registerPagePasswordAgain"
            android:layout_alignEnd="@+id/registerPagePasswordAgain"
            android:hint="First Name"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:id="@+id/registerPageLastName"
            android:layout_below="@+id/registerPageFirstName"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:hint="Last Name"/>


    </RelativeLayout>

</RelativeLayout>
