<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ucsd.stephen_h.matchup.MyEventListPage">

    <include layout="@layout/event_list_page_customized_action_bar"
        android:id="@+id/myEventPageActionBar"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/myEventPageTabBar"
        android:orientation="horizontal"
        android:layout_below="@id/myEventPageActionBar"
        android:weightSum="4">

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/myEventPagePairedEventListButton"
            android:src="@drawable/ic_paired_events"
            android:layout_gravity="center"
            android:textAllCaps="false"
            android:layout_weight="1"
            android:background="@null"/>

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/myEventPageMyEventListButton"
            android:src="@drawable/ic_my_events"
            android:layout_gravity="center"
            android:textAllCaps="false"
            android:layout_weight="1"
            android:background="@null"/>


        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/myEventPageProfileButton"
            android:src="@drawable/ic_profile_page"
            android:layout_gravity="center"
            android:textAllCaps="false"
            android:layout_weight="1"
            android:background="@null"/>

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/InterLinksButton"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/ic_questions"
            android:layout_gravity="center"
            android:textAllCaps="false"
            android:layout_weight="1"
            android:background="@null" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@id/myEventPageTabBar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:layout_below="@id/myEventPageTabBar">

        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

</RelativeLayout>
