<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ucsd.stephen_h.matchup.ForgetPasswordActivity">
    <include layout="@layout/default_customized_action_bar"
        android:id="@+id/forgetPasswordPageActionBar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/forgetPasswordPageActionBar"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:layout_centerVertical="true"
            android:textAllCaps="false"
            android:id="@+id/forgetPasswordSubmitButton" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/forgetPasswordEmailAddress"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:hint="Email Address When Sign Up"
            android:layout_above ="@id/forgetPasswordSubmitButton" />

    </RelativeLayout>



</RelativeLayout>
